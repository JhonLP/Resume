verde = #4ab261
amarillo = #f4c633
rojo = #ca0107
fw = 400

html,body
  font-family 'Roboto', sans-serif
  font-size 16px
  margin auto
  max-width 990px

header
  display flex
  justify-content space-between
  align-items center

.icon
  width 0.8em
  height 0.8em
  vertical-align middle
  padding-right .25em

.pos
  fill verde

.adv
  fill amarillo

.neg
  fill rojo
